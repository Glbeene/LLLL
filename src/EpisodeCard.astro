---
interface Props {
  title: string;
  description: string;
  platforms: {
    youtube?: string;
    spotify?: string;
    apple?: string;
    podbean?: string;
  };
}

const { title, description, platforms } = Astro.props;
---

<div class="bg-white/90 backdrop-blur-sm rounded-lg p-6 shadow-xl">
  <h3 class="text-xl font-display font-bold mb-3">{title}</h3>
  <p class="text-gray-600 mb-6">{description}</p>
  
  <div class="space-y-3">
    {platforms.youtube && (
      <a 
        href={platforms.youtube}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-red-600 hover:text-red-700 transition"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        Watch on YouTube
      </a>
    )}
    
    {platforms.spotify && (
      <a 
        href={platforms.spotify}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-green-600 hover:text-green-700 transition"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
        </svg>
        Listen on Spotify
      </a>
    )}
    
    {platforms.apple && (
      <a 
        href={platforms.apple}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-purple-600 hover:text-purple-700 transition"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.977 18.025c-.407 1.018-.627 1.47-1.172 2.37-.749 1.233-1.81 2.768-3.127 2.79-1.17.018-1.467-.726-3.055-.726-1.586 0-1.923.708-3.095.726-1.316.022-2.32-1.326-3.07-2.56-.838-1.24-1.49-3.126-1.53-4.94-.045-1.57.285-2.914 1.142-3.91.642-.747 1.718-1.225 2.916-1.225 1.218 0 1.99.726 3.002.726 1.01 0 1.625-.726 3.082-.726 1.101 0 2.266.407 3.095 1.12-2.72 1.495-2.278 5.398.812 6.355zM17.895 4.754c.615-.763.985-1.814.879-2.875-1.103.09-2.396.752-3.137 1.63-.676.798-1.17 1.83-1.02 2.873 1.177.036 2.39-.65 3.278-1.628z"/>
        </svg>
        Listen on Apple Podcasts
      </a>
    )}
    
    {platforms.podbean && (
      <a 
        href={platforms.podbean}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 text-orange-600 hover:text-orange-700 transition"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12c6.627 0 12-5.372 12-12S18.627 0 12 0zm.14 19.018c-3.868 0-7-3.14-7-7.018 0-3.878 3.132-7.018 7-7.018s7 3.14 7 7.018c0 3.878-3.132 7.018-7 7.018zm0-12.77c-3.172 0-5.743 2.577-5.743 5.752 0 3.174 2.571 5.752 5.743 5.752s5.743-2.578 5.743-5.752c0-3.175-2.571-5.752-5.743-5.752z"/>
        </svg>
        Listen on Podbean
      </a>
    )}
  </div>
</div>